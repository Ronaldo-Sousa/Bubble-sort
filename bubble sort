#include <stdio.h>

// Função para imprimir o vetor
// Criamos essa função para não precisar repetir o loop 'for' toda vez que quisermos ver o vetor
void imprimirVetor(int vetor[], int tamanho) {
    for (int k = 0; k < tamanho; k++) {
        printf("%d ", vetor[k]);
    }
    printf("\n"); // Pula uma linha ao final da impressão
}

void bubbleSort(int vetor[], int tamanho) {
    int i, j, aux;

    // O primeiro loop controla as passagens pelo vetor
    for (i = 0; i < tamanho - 1; i++) {
        
        // O segundo loop faz as comparações par a par
        // O "- i" serve para não comparar os elementos que já "flutuaram" para o fim
        for (j = 0; j < tamanho - i - 1; j++) {
            
            if (vetor[j] > vetor[j + 1]) {
                // Troca os elementos usando a variável auxiliar
                aux = vetor[j];
                vetor[j] = vetor[j + 1];
                vetor[j + 1] = aux;
            }
        }
    }
}

int main() {
    int meuVetor[] = {50, 10, 40, 30, 20, 80, 5, 60, 90, 70};
    int tam = 10;

    printf("Vetor original: ");
    imprimirVetor(meuVetor, tam); // Chamada da função antes de ordenar

    bubbleSort(meuVetor, tam);

    printf("Vetor ordenado: ");
    imprimirVetor(meuVetor, tam); // Chamada da função depois de ordenar

    return 0;
}
